- if @classrooms.blank? && @posts.blank?
  = render 'shared/dashboard_placeholder'

- if @classrooms.any?
  section.content-header
    h1
      | Salas
      small
        | suas salas de aula
  section.content style="min-height: 10px"
    .row
      = render 'shared/classrooms_tiles', classrooms: @classrooms
  
- if @posts.any?
  section.content-header
    h1
      | Dashboard
      small
        | ultimas postagens
    
  section.content
    .row
    ul.timeline
      - @posts.each do |post|
        = render 'shared/post', post: post
