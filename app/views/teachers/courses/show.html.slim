= render 'form_header'

section.content
  .box.box-default
    .box-header.with-border
      h3.box-title
        | Informações
    .box-body
      .row
        .col-md-5
          label.control-label= t 'simple_form.labels.course.name'
          p= deal_value resource.name
        .col-md-2
          label.control-label= t 'simple_form.labels.course.initials'
          p= deal_value resource.initials
        .col-md-5
          label.control-label= t 'simple_form.labels.course.coordinator'
          p= deal_value resource.coordinator_name
      hr
      
      .row
        .col-md-12
          label.control-label= t 'simple_form.labels.course.description'
          div.description-box
            = resource.description.html_safe
    = render 'form_footer'
